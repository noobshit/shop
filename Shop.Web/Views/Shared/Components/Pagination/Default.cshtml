@model PaginationViewModel

<nav>
    <ul class="pagination mt-3 justify-content-center">
        @if( Model.HasPreviousPage )
        {
            <li class="page-item">
                <a asp-all-route-data="@Model.AllRouteData"
                   asp-route-page="0"
                   class="page-link">
                    <i class="fas fa-angle-double-left"></i>
                </a>
            </li>
            <li class="page-item">
                <a asp-all-route-data="@Model.AllRouteData"
                   asp-route-page="@(Model.CurrentPage - 1)"
                   class="page-link">
                    <i class="fas fa-angle-left"></i>
                </a>
            </li>
        }

        @foreach( var pageNumber in Model.PreviousPages )
        {
            <li class="page-item">
                <a asp-all-route-data="@Model.AllRouteData"
                   asp-route-page="@pageNumber"
                   class="page-link">@(pageNumber + 1)</a>
            </li>
        }

        <li class="page-item active">
            <a href="#" class="page-link">@(Model.CurrentPage + 1)</a>
        </li>

        @foreach( var pageNumber in Model.FollowingPages )
        {
            <li class="page-item">
                <a asp-all-route-data="@Model.AllRouteData"
                   asp-route-page="@pageNumber"
                   class="page-link">@(pageNumber + 1)</a>
            </li>
        }

        @if( Model.HasNextPage )
        {
            <li class="page-item">
                <a asp-all-route-data="@Model.AllRouteData"
                   asp-route-page="@(Model.CurrentPage + 1)"
                   class="page-link">
                    <i class="fas fa-angle-right"></i>
                </a>
            </li>
            <li class="page-item">
                <a asp-all-route-data="@Model.AllRouteData"
                   asp-route-page="@(Model.LastPage)"
                   class="page-link">
                    <i class="fas fa-angle-double-right"></i>
                </a>
            </li>
        }
    </ul>
</nav>