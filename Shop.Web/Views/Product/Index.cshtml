@model IEnumerable<ProductViewModel>

@{
    ViewBag.Title = "Admin panel";
}

<a asp-action="Create" asp-controller="Product" class="btn btn-success">Add new product</a>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>ImagePath</th>
        </tr>
    </thead>
    <tbody>
        @foreach( var item in Model )
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.ImagePath</td>
                <td><a asp-action="details" asp-controller="product" asp-route-id="@item.Id" class="btn btn-info">Details</a></td>
                <td><a asp-action="edit" asp-controller="product" asp-route-id="@item.Id" class="btn btn-info">Edit</a></td>
                <td><a asp-action="delete" asp-controller="product" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
            </tr>
        }

    </tbody>
</table>
