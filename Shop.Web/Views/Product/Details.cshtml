@model ProductViewModel

@{
    ViewData["Title"] = "Details";
    var imagePath = "~/images/products/" + (Model.ImagePath ?? "no_image.jpg");
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dd class = "col-sm-10">
            <img src="@imagePath" asp-append-version="true" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-controller="Product" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>
    <a asp-action="Delete" asp-controller="Product" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <a asp-action="Index">Back to List</a>
</div>
