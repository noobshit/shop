@model SignUpViewModel

@{
    ViewData["Title"] = "Sign up";
}

<div class="d-flex justify-content-center">
    <div class="bg-light p-3 rounded" style="width: 500px;">
        <h1 class="text-center">Sign up</h1>
        <hr />
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Email" class="col-form-label col-sm-4"></label>
                <div class="col-sm-8">
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="col-form-label col-12 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-form-label col-sm-4"></label>
                <div class="col-sm-8">
                    <input asp-for="Password" class="form-control" />
                </div>
                <span asp-validation-for="Password" class="col-form-label col-12 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ConfirmPassword" class="col-form-label col-sm-4"></label>
                <div class="col-sm-8">
                    <input asp-for="ConfirmPassword" class="form-control" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="col-form-label col-12 text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Role" class="col-form-label col-sm-4"></label>
                <div class="col-sm-8">
                    <select asp-for="Role" asp-items="Model.Roles" class="form-control"></select>
                </div>
                <span asp-validation-for="Role" class="col-form-label col-12 text-danger"></span>
            </div>
            <hr />
            <div class="form-group row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-block">Sign up</button>
                </div>
            </div>
        </form>
    </div>
</div>
