@model HomeViewModel

@{
    ViewBag.Title = "Shop";
    ViewBag.ShowSidebar = false;
    var OrderBy = Model.OrderBy;
    var SearchPhrase = Model.SearchPhrase;
}

<div class="row">
    <div class="col-md-6 col-lg-4">
        <form method="get">
            <div class="form-group">
                <input tasp-for="@SearchPhrase" hidden />
                <select asp-for="@OrderBy" asp-items="Html.GetEnumSelectList<ProductOrderByEnum>()" 
                        class="form-control" onchange="this.form.submit()"></select>
            </div>
        </form>
    </div>
    <div class="col-md-6 col-lg-4 offset-lg-4">
        <form method="get" asp-controller="home" asp-action="index">
            <div class="input-group">
                <input asp-for="@OrderBy" hidden />
                <input type="text" asp-for="@SearchPhrase" class="form-control" placeholder="Search..."/>
                <div class="input-group-append">
                    <button type="submit" class="btn btn-light">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

@if( Model.Products.Any() )
{
    <div class="row">
        @foreach( var product in Model.Products )
        {
            <div class="col-md-6 col-lg-4 d-flex align-items-stretch">
                <vc:Product model="product"></vc:Product>
            </div>
        }
    </div>
    <nav>
        <ul class="pagination mt-3 justify-content-center">
            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                <a class="page-link" asp-route-page="@(Model.CurrentPage - 1)" asp-route-orderBy="@OrderBy" asp-route-SearchPhrase="@SearchPhrase">Previous</a>
            </li>

            <li class="page-item">
                <a class="page-link active" href="#">@(Model.CurrentPage + 1)</a>
            </li>

            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                <a class="page-link" asp-route-page="@(Model.CurrentPage + 1)" asp-route-orderBy="@OrderBy" asp-route-SearchPhrase="@SearchPhrase">Next</a>
            </li>
        </ul>
    </nav>
}
else
{
    <h1 class="text-center">No products found.</h1>
}