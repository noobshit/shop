@model Shop.Web.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Order details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPayment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPayment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactFirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactFirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactLastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactLastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactPhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactPhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactCity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactCity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactStreet)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactStreet)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactPostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactPostalCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactCountry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactCountry)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        @{ var dummy = Model.OrderItems.FirstOrDefault(); }
        <tr>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => dummy.Quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach( var item in Model.OrderItems )
        {
            <tr>
                <td>
                    <img src="~/images/products/@item.ProductImagePath" 
                         style="max-width: 150px; max-height: 150px"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>
